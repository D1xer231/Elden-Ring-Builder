<Window x:Class="Elden_Ring_Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elden_Ring_Builder"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/img/icons/ico100.png"
        Title="Elden Ring Builder" Height="500" Width="800" Cursor="">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF131521"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--Icon + top 0x0-->
        <Grid Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2">
            <Image Source="/img/icons/ico100.png" Stretch="Uniform" Height="30" Width="30" HorizontalAlignment="Left"/>
        </Grid>

        <!--Left tools side 1x0-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Button x:Name="exit_btn" Content="" Margin="2" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Click="exit_btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/img/icons/exit.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Grid>
    </Grid>
</Window>
