<Window x:Class="Elden_Ring_Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elden_Ring_Builder" xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/img/icons/ico100.png"
        Title="Elden Ring Builder" Height="600" Width="900" Cursor="">
    
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" x:Name="MainSCREEN_1">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF131521"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--Icon 0x0-->
        <Grid Grid.Row="0">
            <Image Source="/img/icons/ico100.png" Stretch="Uniform" Height="30" Width="30" HorizontalAlignment="Left"/>
        </Grid>

        <!-- Tools top 0x1-->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="326*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="54*"/>
            </Grid.ColumnDefinitions>
            <Menu Grid.ColumnSpan="3">
                <MenuItem Header="App" x:Name="app_btn" Foreground="White">
                    <Separator/>
                    <MenuItem Header="About" Command="{Binding AboutAppCommand}" Foreground="White"/>
                    <MenuItem Header="Gallery" Click="gallery_grid_btn_Click" Foreground="White"/>
                    <MenuItem Header="Hide App" Click="hide_app_Click" Foreground="White"/>
                    <MenuItem Header="Settings" Click="settings_btn_Click" Foreground="White"/>
                    <MenuItem Header="Updates" Command="{Binding UrlOpenningCommand}" CommandParameter="https://github.com/D1xer231/Elden-Ring-Builder/releases" Foreground="White"/>
                    <MenuItem Header="README" Command="{Binding UrlOpenningCommand}" CommandParameter="README.md" Foreground="White"/>
                    <MenuItem Header="Exit" Click="exit_btn_Click" Foreground="White"/>
                </MenuItem>

                <MenuItem Header="Steam" x:Name="steam_btn" Foreground="White">
                    <Separator/>
                    <MenuItem Header="Open Steam" Command="{Binding UrlOpenningCommand}"  CommandParameter="steam://open/main" Foreground="White"/>
                    <MenuItem Header="Author Steam" Command="{Binding UrlOpenningCommand}" CommandParameter="steam://openurl/https://steamcommunity.com/profiles/76561199220453620/" Foreground="White"/>
                    <MenuItem Header="User Info" Command="{Binding }" Foreground="White" Click="users_steam_btn_Click"/>
                </MenuItem>

                <MenuItem Header="GitHub" x:Name="github_btn" Foreground="White">
                    <Separator/>
                    <MenuItem Header="Open GitHub" Command="{Binding UrlOpenningCommand}" CommandParameter="https://github.com/D1xer231" Foreground="White"/>
                    <MenuItem Header="Project's GitHub" Command="{Binding UrlOpenningCommand}" CommandParameter="https://github.com/D1xer231/Elden-Ring-Builder" Foreground="White"/>
                    <MenuItem Header="Last Version" Command="{Binding UrlOpenningCommand}" CommandParameter="https://github.com/D1xer231/Elden-Ring-Builder/releases" Foreground="White"/>
                </MenuItem>

                <MenuItem Header="Support" x:Name="support_btn" Foreground="White">
                    <Separator/>
                    <MenuItem Header="Telegram" Command="{Binding UrlOpenningCommand}" CommandParameter="https://t.me/d1xer_231" Foreground="White"/>
                    <MenuItem Header="Telegram Bot" Command="{Binding UrlOpenningCommand}" CommandParameter="https://t.me/elden_builder_bot" Foreground="White"/>
                    <MenuItem Header="Send Email" Click="send_email_btn_Click" Foreground="White"/>
                </MenuItem>

                <MenuItem Header="Code" x:Name="redeemcode_btn" Foreground="White">
                    <Separator/>
                    <MenuItem Header="Redeem Code" Click="redeemcode_btn_Click" Foreground="White"/>
                </MenuItem>

                <MenuItem Header="Rrefresh" x:Name="refresh_data_btn" Foreground="White">
                    <Separator/>
                    <MenuItem Header="Refresh Data" Click="refresh_data_btn_Click" Foreground="White"/>
                    <MenuItem Header="Check for UPDATES" Command="{Binding UrlOpenningCommand}" CommandParameter="https://github.com/D1xer231/Elden-Ring-Builder/releases" Foreground="White"/>
                </MenuItem>
            </Menu>
        </Grid>

        <!--Left tools side 1x0-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Button BorderBrush="{x:Null}" Width="30" Height="32" VerticalAlignment="Bottom" Margin="0,0,0,360" Cursor="Hand" Click="change_to_mainscreen_click">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/img/icons/house-chimney.png"/>
                </Button.Background>
            </Button>

            <Button BorderBrush="{x:Null}" VerticalAlignment="Bottom" Margin="0,0,0,310" Width="30" Height="32" Cursor="Hand" Click="weapons_screen_Click">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/img/icons/sword.png"/>
                </Button.Background>
            </Button>

            <Button Width="30" Height="32" VerticalAlignment="Bottom" Margin="0,0,0,260" BorderBrush="{x:Null}" Click="runeslist_btn_Click" Cursor="Hand">
                <Button.Background>
                    <ImageBrush ImageSource="/img/icons/rectangle-list.png"/>
                </Button.Background>
            </Button>

            <Button x:Name="web" VerticalAlignment="Bottom" BorderBrush="{x:Null}" HorizontalAlignment="Center" Margin="0,0,0,210" Cursor="Hand" Click="web_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/img/icons/globe.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>

            <Button x:Name="settings_btn" BorderBrush="{x:Null}" VerticalAlignment="Bottom" Margin="0,0,0,160" Cursor="Hand" Click="settings_btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/img/icons/settings.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>

            <Button BorderBrush="{x:Null}" VerticalAlignment="Bottom" Margin="0,0,0,110" Width="30" Height="32" Cursor="Hand" Click="users_steam_btn_Click">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/img/icons/steam_icon.png"/>
                </Button.Background>
            </Button>

            <Button x:Name="email_btn" VerticalAlignment="Bottom" Margin="0,0,0,60" Click="send_email_btn_Click" Cursor="Hand" BorderBrush="{x:Null}">
                <Button.Background>
                    <ImageBrush Stretch="Uniform" ImageSource="/img/icons/letter.png"/>
                </Button.Background>
            </Button>


            <Button x:Name="exit_btn" Content="" Margin="5,2,2,10" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Click="exit_btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/img/icons/exit.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Grid>



        <!-- Main sscreen 1x1-->
        <Grid Grid.Row="1" Grid.Column="1" x:Name="main_screen_grid" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="761*"/>
                <ColumnDefinition Width="110*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <StackPanel Visibility="Visible">
                    <TextBlock Text="Welcome to Elden Ring Builder" HorizontalAlignment="Center" FontSize="30" Foreground="White" VerticalAlignment="Top" FontFamily="Sitka Heading Semibold"/>
                    <TextBlock Text="{Binding UserName}" HorizontalAlignment="Center" FontSize="30" Foreground="#047DD3" VerticalAlignment="Top" FontFamily="Sitka Heading Semibold"/>
                </StackPanel>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      Grid.Column="1"
                      Grid.Row="1"
                      PanningMode="HorizontalOnly">
                    <ListBox x:Name="BuildsList"
                         Margin="10"
                         ItemsSource="{Binding builds}"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        <!-- Горизонтальная раскладка -->
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <!-- layaout -->
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10"
                                    Padding="10"
                                    Background="#005592"
                                    CornerRadius="10"
                                    BorderBrush="Transparent"
                                    Width="150">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                                        <!-- img -->
                                        <Image Source="{Binding img_path}"
                                           Height="120"
                                           Width="220"
                                           Stretch="Uniform"
                                           Margin="0,0,0,10"
                                           HorizontalAlignment="Center"/>

                                        <!-- name -->
                                        <TextBlock Text="{Binding Name}"
                                           Foreground="#D9D9D9"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           TextAlignment="Center"
                                           Margin="0,0,0,5" TextWrapping="Wrap"/>

                                        <!-- stats table -->
                                        <Grid Margin="0,5,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Vigor:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Vigor}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Mind:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Mind}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Endurance:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Endurance}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Strength:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Strength}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Dexterity:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding Dexterity}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Intelligence:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding Intelligence}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="6" Grid.Column="0" Text="Faith:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding Faith}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="7" Grid.Column="0" Text="Arcane:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding Arcane}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>
                                        </Grid>

                                        <!-- lvl -->
                                        <TextBlock Text="{Binding LVL}"
                                           Foreground="#D9D9D9"
                                           FontSize="10"
                                           FontWeight="Bold"
                                           Margin="0,10,0,0"
                                           HorizontalAlignment="Center"
                                           x:Name="lvl_build_text"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>

            </StackPanel>
            <Image Source="/img/knight1.png" Width="100" HorizontalAlignment="Right" Margin="0,400,20,0" Grid.ColumnSpan="2"/>
            <Image Source="/img/renni1.png" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,400,0,0"/>
            <Image Source="/img/elden_ring_logo.png" Width="150" VerticalAlignment="Bottom" Margin="360,0,250,20"/>
        </Grid>

        <!-- weapons screen + stats -->
        <Grid Grid.Row="1" Grid.Column="1" x:Name="weapons_grid" Visibility="Hidden">
            <StackPanel>
                <TextBlock Text="Weapons and Stats" HorizontalAlignment="Center" FontSize="30" Foreground="White" VerticalAlignment="Top" FontFamily="Sitka Heading Semibold" Margin="0,30,0,0"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Disabled"
                      CanContentScroll="False"
                      PanningMode="HorizontalOnly"
                      Margin="20">
                    <ListBox x:Name="WeaponsList" ItemsSource="{Binding weapons}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Padding="10,40, 10, 40" Background="#005592" CornerRadius="10" BorderBrush="Transparent" Width="150" MouseLeftButtonUp="Weapon_info_LeftBtnUp" BorderThickness="0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- weapon name -->
                                        <TextBlock Grid.Row="0" Text="{Binding name}" Foreground="#FFD700" FontSize="15" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,25" TextWrapping="Wrap"/>

                                        <!-- weapon image -->
                                        <Image Grid.Row="1" Source="{Binding image_path}" Height="120" Width="220" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                                        <!-- stats table -->
                                        <Grid Grid.Row="2" Margin="0,5,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Physical:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding physic}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Magic:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding magic}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Fire:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding fire}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Lightning:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ligt}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Holy:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding holy}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>

                                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Critical:" Foreground="#D9D9D9" FontSize="13"/>
                                            <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding crift}" Foreground="#FFD700" FontSize="13" Margin="5,0,0,0"/>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
            <TextBlock Text="*Weapon stats are approximate and may vary based on upgrades and player stats." HorizontalAlignment="Center" FontSize="10" Foreground="White" VerticalAlignment="Bottom" FontFamily="Sitka Heading Semibold" Margin="0,0,0,20"/>
        </Grid>


        <!-- runes info screen 1x1-->
        <Grid Grid.Column="1" Grid.Row="1" Visibility="Hidden" x:Name="runes_list_grid">
            <StackPanel>
                <TextBlock Text="Runes" HorizontalAlignment="Center" FontSize="30" Foreground="White" VerticalAlignment="Top" FontFamily="Sitka Heading Semibold" Margin="0,10,0,0"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Disabled"
                         CanContentScroll="False"
                         Grid.Column="1"
                         Grid.Row="1"
                         PanningMode="HorizontalOnly"
                         >
                    <ListBox x:Name="RunesList" ItemsSource="{Binding runes}" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Padding="10" Background="#005592" CornerRadius="10" BorderBrush="Transparent" Width="300" MouseLeftButtonUp="Runes_info_LeftBtnUp">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding name}" Foreground="#FFD700" FontSize="15" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,5"/>
                                        <Image Grid.Row="1" Source="{Binding image_path}" Height="300" Width="220" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        <TextBlock Grid.Row="2" Text="{Binding description}" Foreground="#D9D9D9" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0" FontWeight="Bold"/>

                                        <!-- <wv2:WebView2 Source="{Binding map_link}" Height="400" ZoomFactor="0.5"/> -->
                                        
                                        <!--
                                        <Image Grid.Row="0" Source="{Binding image_path}" Height="120" Width="220" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,10"/>
<TextBlock Grid.Row="1" Text="{Binding name}" Foreground="#FFD700" FontSize="15" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,5"/>
<TextBlock Grid.Row="2" Text="{Binding description}" Foreground="#D9D9D9" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0"/>
<TextBlock Grid.Row="3" Text="{Binding location}" Foreground="#D9D9D9" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0"/>
<TextBlock Grid.Row="4" Text="{Binding type}" Foreground="#D9D9D9" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0"/>
<TextBlock Grid.Row="5" Text="{Binding effect}" Foreground="#FFD700" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        -->
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
        </Grid>

        <!--settings  -->
        <Grid Grid.Column="1" Grid.Row="1" x:Name="settings_screen_grid" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <Image x:Name="QrImage" Grid.Row="1" Grid.Column="2" Width="150" Height="150" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,20"/>

            <StackPanel Grid.Row="0" Grid.Column="1" x:Name="dualsence_connection_stackpanel" Grid.RowSpan="2">
                <Image x:Name="DualSence_img" Source="/img/dualsence-black.png" Height="180" HorizontalAlignment="Center" Margin="0,100,0,0"/>
                <TextBlock x:Name="DualSence_status" Text="connected" Foreground="White" FontWeight="Bold" FontSize="28" HorizontalAlignment="Center"/>
                <ToggleButton IsChecked="True" Width="50" Margin="5" Checked="Balck_DualSence_Checked" Unchecked="White_DualSence_UnChecked"/>
            </StackPanel>
            
        </Grid>

        <!-- web -->
        <Grid Grid.Row="1" Grid.Column="1" x:Name="web_view_screen_grid" Visibility="Hidden">
            <TextBox  Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" x:Name="adress_input" Height="25" Width="500"  VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,5,0,10" KeyDown="adress_input_btn_KeyDown"/>
            <Button Content="Go" Height="25" Width="50" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="510,15,0,0" Click="adress_input_btn_Click"/>
            <ProgressBar x:Name="ProgressBar" Width="250" Height="15" Foreground="#047DD3" Background="#333333" IsIndeterminate="True"/>
            <wv2:WebView2 Name="webView2" Height="495" Width="800" Visibility="Hidden"/>
            <Button BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,5,0,0"  Click="webview_nav_Click" x:Name="webview_back">
                <Button.Background>
                    <ImageBrush ImageSource="/img/back.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button BorderBrush="{x:Null}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,5,0,0" Click="webview_nav_Click" x:Name="webview_forward">
                <Button.Background>
                    <ImageBrush ImageSource="/img/forward.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Grid>

        <!-- Gallery -->
        <Grid Grid.Row="1" Grid.Column="1" x:Name="gallery_screen_grid" Visibility="Hidden">
            <ListBox x:Name="GallerList" 
             ItemsSource="{Binding gallery}" 
             Background="Transparent" 
             BorderThickness="0" 
             ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
             ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="10" Width="Auto" Height="Auto">
                            <Grid>
                                <Image Source="{Binding path}" 
                               Height="Auto" 
                               Width="790" 
                               Stretch="Uniform" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,10" 
                               />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- user's steam page -->
        <Grid Grid.Column="1" Grid.Row="1" x:Name="users_steam_grid" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="300"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Image x:Name="steam_img" Width="180" Height="180"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <StackPanel x:Name="nameId" VerticalAlignment="Center" Visibility="Hidden">
                    <TextBlock x:Name="steam_name" FontSize="26" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                    <TextBlock x:Name="steam_id" FontSize="16" Foreground="Gray"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="2" Visibility="Hidden" x:Name="statsTable">
                <Border BorderBrush="#047DD3" BorderThickness="1" Margin="10">
                    <Grid>
                        <!-- 2 колонки -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- 5 строк -->
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!-- Таблица 5x2 с рамками для каждой ячейки -->
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock Text="Games" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock x:Name="steam_gameCount" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock Text="Elden Ring" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock x:Name="hrs_played_elden_ring" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="3" Grid.Column="0" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock Text="Total" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="3" Grid.Column="1" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock x:Name="total_hrs_count" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock Text="Badge" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="2" Grid.Column="1" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock x:Name="total_badges_count" Foreground="White" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="4" Grid.Column="0" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock Text="Friends" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border Grid.Row="4" Grid.Column="1" BorderThickness="1" BorderBrush="#047DD3">
                            <TextBlock x:Name="friends_count" Foreground="White" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            <Image x:Name="steam_logo" Source="https://cdn.freebiesupply.com/images/large/2x/steam-logo-transparent.png" Width="100" Height="100" Grid.Row="0" Grid.Column="2" Visibility="Hidden"/>
            <Image x:Name="cat_img" Source="https://i.pinimg.com/736x/bf/28/92/bf28921d9d049c35431f52e80eacf880.jpg" Opacity="0.5" Width="300" Height="200" Margin="-25,50,-25,50" Grid.Row="1" Grid.Column="0" Visibility="Hidden"/>
            <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50">
                <TextBox x:Name="insert_steam_id" Width="250" FontSize="20" FontWeight="Bold" Foreground="White" Padding="8" MaxLength="17" Margin="0,0,0,10" />
                <Button Content="Get Info" Width="120" Height="40" Click="get_steam_info" FontWeight="Bold" Foreground="White" BorderThickness="0,0,0,0" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>