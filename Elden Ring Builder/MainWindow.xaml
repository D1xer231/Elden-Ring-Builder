<Window x:Class="Elden_Ring_Builder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elden_Ring_Builder"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/img/icons/ico100.png"
        Title="Elden Ring Builder" Height="500" Width="800" Cursor="">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF131521"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--Icon 0x0-->
        <Grid Grid.Row="0">
            <Image Source="/img/icons/ico100.png" Stretch="Uniform" Height="30" Width="30" HorizontalAlignment="Left"/>
        </Grid>
        
        <!-- Tools top 0x1-->
        <Grid Grid.Column="1">
            <Menu>
                <MenuItem Header="App" x:Name="app_btn" Foreground="White">
                    <MenuItem Header="About" Click="about_app_Click" Foreground="White"/>
                </MenuItem>
                
                <MenuItem Header="Steam" x:Name="steam_btn" Foreground="White">
                    <MenuItem Header="Open Steam" Click="steam_btn_Click" Foreground="White"/>
                    <MenuItem Header="Author Steam" Click="author_steam_btn_Click" Foreground="White"/>
                </MenuItem>

                <MenuItem Header="GitHub" x:Name="github_btn" Foreground="White">
                    <MenuItem Header="Open GitHub" Click="github_btn_Click" Foreground="White"/>
                    <MenuItem Header="Project's GitHub" Click="author_github_btn_Click" Foreground="White"/>
                </MenuItem>

                <MenuItem Header="Support" x:Name="support_btn" Foreground="White">
                    <MenuItem Header="Telegram" Click="telegram_btn_Click" Foreground="White"/>
                </MenuItem>
            </Menu>
            <TextBlock x:Name="date_and_time_txt" Text="Time" HorizontalAlignment="Right" Foreground="White" FontSize="15" Margin="0,20,10,0"/>
        </Grid>

        <!--Left tools side 1x0-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Button x:Name="exit_btn" Content="" Margin="5,2,2,10" VerticalAlignment="Bottom" BorderBrush="{x:Null}" Click="exit_btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/img/icons/exit.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
        </Grid>
        
        <!-- Main sscreen 1x1-->
        <Grid Grid.Row="1" Grid.Column="1">
            <!-- <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" Margin="10"/>  -->
            <Image Source="/img/renni1.png" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <StackPanel x:Name="welcome_text_stackpanel" Margin="0,30,0,0" VerticalAlignment="Top">
                <TextBlock Text="Welcome to Elden Ring Builder" HorizontalAlignment="Center" FontSize="30" Foreground="White" VerticalAlignment="Top" FontFamily="Sitka Heading Semibold"/>
                <TextBlock x:Name="welcome_user_txt" HorizontalAlignment="Center" FontSize="30" Foreground="#047DD3" VerticalAlignment="Top" FontFamily="Sitka Heading Semibold"/>
                <ComboBox Name="select_char_combobox" Width="300" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="White">
                    <ComboBoxItem Content="Select your character" IsSelected="True" Foreground="White"/>
                </ComboBox>
                <Image Source="/img/knight1.png" Width="100" HorizontalAlignment="Right" Margin="0,0,20,0"/>
            </StackPanel>
            <Image Source="/img/elden_ring_logo.png" Width="150" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
        </Grid>
    </Grid>
</Window>
