<Window x:Class="Elden_Ring_Builder.WeaponInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elden_Ring_Builder"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Style="{StaticResource MaterialDesignWindow}"
        Title="WeaponInfo" Height="400" Width="300">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Border CornerRadius="15" Padding="20" BorderBrush="#047DD3" BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF131521"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Top -->
                <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Width="20" Height="20" BorderBrush="{x:Null}" Click="close_window_btn_Click" BorderThickness="1,1,1,5">
                    <Button.Background>
                        <ImageBrush ImageSource="/img/icons/exit.png" Stretch="Uniform"/>
                    </Button.Background>
                </Button>
                <TextBlock Text="{Binding name}" Foreground="White" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2" TextWrapping="Wrap"/>
                <Image Source="{Binding image_path}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.ColumnSpan="2"/>

                <!-- Scaling -->
                <TextBlock Text="Scaling:" Foreground="White" FontSize="15" Grid.Row="2" Grid.Column="0" Margin="0,0,0,10"/>
                <Separator Grid.Row="2" Grid.Column="0" Margin="0,20,0,0"/>

                <TextBlock Text="Strenght" Foreground="White" FontSize="11" Grid.Row="3" Grid.Column="0"/>
                <TextBlock Text="{Binding sca_strength}" Foreground="#FFD700" FontSize="11" Grid.Row="3" Grid.Column="0" Margin="100,0,0,0"/>

                <TextBlock Text="Dexterity" Foreground="White" FontSize="11" Grid.Row="4" Grid.Column="0"/>
                <TextBlock Text="{Binding sca_dexterity}" Foreground="#FFD700" FontSize="11" Grid.Row="4" Grid.Column="0" Margin="100,0,0,0"/>

                <TextBlock Text="Intelligence" Foreground="White" FontSize="11" Grid.Row="5" Grid.Column="0"/>
                <TextBlock Text="{Binding sca_intelligence}" Foreground="#FFD700" FontSize="11" Grid.Row="5" Grid.Column="0" Margin="100,0,0,0"/>

                <TextBlock Text="Faith" Foreground="White" FontSize="11" Grid.Row="6" Grid.Column="0"/>
                <TextBlock Text="{Binding sca_faith}" Foreground="#FFD700" FontSize="11" Grid.Row="6" Grid.Column="0" Margin="100,0,0,0"/>

                <TextBlock Text="Arcane" Foreground="White" FontSize="11" Grid.Row="7" Grid.Column="0"/>
                <TextBlock Text="{Binding sca_arcane}" Foreground="#FFD700" FontSize="11" Grid.Row="7" Grid.Column="0" Margin="100,0,0,0"/>

                <!-- Requires -->
                <TextBlock Text="Requires:" Foreground="White" FontSize="15" Grid.Row="2" Grid.Column="1"/>
                <Separator Grid.Row="2" Grid.Column="1" Margin="0,20,0,0"/>

                <TextBlock Text="Strenght" Foreground="White" FontSize="11" Grid.Row="3" Grid.Column="1"/>
                <TextBlock Text="{Binding req_strength}" Foreground="#FFD700" FontSize="11" Grid.Row="3" Grid.Column="1" Margin="100,0,0,0"/>

                <TextBlock Text="Dexterity" Foreground="White" FontSize="11" Grid.Row="4" Grid.Column="1"/>
                <TextBlock Text="{Binding req_dexterity}" Foreground="#FFD700" FontSize="11" Grid.Row="4" Grid.Column="1" Margin="100,0,0,0"/>

                <TextBlock Text="Intelligence" Foreground="White" FontSize="11" Grid.Row="5" Grid.Column="1"/>
                <TextBlock Text="{Binding req_intelligence}" Foreground="#FFD700" FontSize="11" Grid.Row="5" Grid.Column="1" Margin="100,0,0,0"/>

                <TextBlock Text="Faith" Foreground="White" FontSize="11" Grid.Row="6" Grid.Column="1"/>
                <TextBlock Text="{Binding req_faith}" Foreground="#FFD700" FontSize="11" Grid.Row="6" Grid.Column="1" Margin="100,0,0,0"/>

                <TextBlock Text="Arcane" Foreground="White" FontSize="11" Grid.Row="7" Grid.Column="1"/>
                <TextBlock Text="{Binding req_arcane}" Foreground="#FFD700" FontSize="11" Grid.Row="7" Grid.Column="1" Margin="100,0,0,0"/>

                <!-- Description + map -->
                <StackPanel Grid.ColumnSpan="2" Grid.Row="8">
                    <!--
                    <Button BorderBrush="{x:Null}" Margin="0,5,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#047DD3" FontSize="10" Width="20" Height="20" Click="show_loc_btn_Click">
                        <Button.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="/img/icons/position.png"/>
                        </Button.Background>
                    </Button>
                    -->
                    <TextBlock Text="{Binding location}" Foreground="White" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
